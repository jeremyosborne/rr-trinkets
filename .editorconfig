# See: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,scss}]
indent_size = 4

[*.md]
indent_size = 4

[*.py]
indent_size = 4

[{.babelrc,.editorconfig,.eslintrc,.stylelintrc}]
indent_size = 2

[*.{jsx,js,json}]
indent_size = 2

[Makefile]
indent_style = tab
